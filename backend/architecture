/backend
│
├── /config               # Configuration de l'application
│   ├── db.js            # Configuration de la base de données
│   └── passport.js       # Configuration de Passport.js pour l'authentification
│
├── /controllers          # Contrôleurs pour gérer les requêtes
│   ├── authController.js # Contrôleur pour l'authentification
│   ├── userController.js # Contrôleur pour la gestion des utilisateurs
│   └── bookController.js # Contrôleur pour la gestion des livres
│
├── /middleware           # Middleware personnalisé
│   ├── authMiddleware.js # Middleware pour vérifier l'authentification
│   └── errorMiddleware.js # Middleware pour gérer les erreurs
│
├── /models               # Modèles de données
│   ├── User.js           # Modèle utilisateur
│   └── Book.js           # Modèle de livre
│
├── /routes               # Routes de l'application
│   ├── authRoutes.js     # Routes pour l'authentification
│   ├── userRoutes.js     # Routes pour les utilisateurs
│   └── bookRoutes.js     # Routes pour les livres
│
├── /utils                # Fonctions utilitaires
│   └── helpers.js        # Fonctions d'aide (par exemple, pour la validation)
│
├── .env                  # Variables d'environnement
├── server.js             # Point d'entrée de l'application
└── package.json          # Dépendances du projet
